<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Android12MeteredVPNRepro.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Is Network Metered?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="Metered" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="24"></Label>
        <Button x:Name="btnRefresh" Text="Refresh" HorizontalOptions="Center" Margin="20" Clicked="btnRefresh_Clicked"></Button>
    </StackLayout>

</ContentPage>
